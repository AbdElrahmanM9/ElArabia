</div>

<div class="col-xs-12 my-5">
    <div class="lined-div">
        <h4><span>منتجاتنا</span></h4>
        <p></p>
    </div>
</div>

<div class="DivFore2">
    <div class="container">
        <div class="carousel5">
            @foreach (var item in Model.ProductsDetails)
            {
                <div class="card">
                    <div class="card-header">
                        <a onclick="location.href='@Url.Action("_DetialsByDetial", "Admin" , new {NameEn = item.NameEn , Id = item.Id})'">
                            <img class="pic-1" src="@Url.Content(item.Image)">
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="card-content">
                            <div class="card-title"><h3>@item.NameAr</h3></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="col-xs-12 my-5">
    <div class="lined-div">
        <h4><span>منتجاتنا</span></h4>
        <p></p>
    </div>
</div>

<div class="row">


    @foreach (var item in Model.ProductsDetails)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 cheese-item text-center">
            <h3><a href="#">@item.NameAr</a></h3>
            <div class="cheese-image">
                <div class="cheese-image-border">
                    <a onclick="location.href='@Url.Action("_Details", "Admin" , new {NameEn = item.NameEn, Id = item.Id})'">
                        <img src="@Url.Content(item.Image)" alt="@item.NameAr" title="@item.NameAr">
                    </a>
                </div>
            </div>
        </div>
    }

</div>