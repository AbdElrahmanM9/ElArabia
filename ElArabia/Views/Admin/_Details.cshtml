                                            <input type="submit" value="Save" class="btn btn-success" />
                                        </div>
                                    </div>
                                </div>
                            }*@
                        </div>
                    </div>
                    @if (Model.PrepareIMG.Count != 0)
                    {
                        <div class="col-xs-12 my-5">
                            <div class="lined-div">
                                <h4><span>بعد التحضير</span></h4>
                                <p></p>
                            </div>
                        </div>

                        <div class="row">
                            @foreach (var item in Model.PrepareIMG)
                            {
                                <div class="col-sm-6 col-md-4 col-lg-3 cheese-item text-center">
                                    <div class="cheese-image">
                                        <div class="cheese-image-border">
                                            <a>
                                                <img style="border: 0px;" class="tweet_thumb" src="@Url.Content(item.IMG)">
                                            </a>
                                        </div>
                                    </div>
                                </div>
