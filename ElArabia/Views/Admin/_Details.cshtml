                            {
                                @Html.AntiForgeryToken()
                                <div class="bd-example5 my-5" id="ItemsTable">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="file" name="upload" class="control-label col-md-4 subscribe btn btn-light btn-lg btn-block" />
                                        </div>
                                    </div>
                                    <input type="hidden" @Html.EditorFor(model => model.ProductsDetails.FirstOrDefault().Id, new { htmlAttributes = new { @class = "form-control" } }) />

                                    <div class="form-group">
