@model ElArabia.ViewModel.HomePageViewModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    img {
        width: 100%;
    }
</style>

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="@Url.Content(Model.Header.IMG1)" />
            <div class="container">
            </div>
        </div>
        <div class="carousel-item">
            <img src="@Url.Content(Model.Header.IMG2)" />
        </div>
        <div class="carousel-item">
            <img src="@Url.Content(Model.Header.IMG3)" />
        </div>
        <div class="carousel-item">
            <img src="@Url.Content(Model.Header.IMG4)" />
        </div>
        <div class="carousel-item">
            <img src="@Url.Content(Model.Header.IMG5)" />
        </div>
        <div class="carousel-item">
            <img src="@Url.Content(Model.Header.IMG6)" />
        </div>

    </div>
    <button class="carousel-control-prev" type="button" data-target="#myCarousel" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#myCarousel" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </button>
</div>

<div class="col-xs-12">
    <div class="lined-div">
        <h4><span>My Products</span></h4>
        <p></p>
    </div>
</div>

<div class="row">


    @foreach (var item in Model.Products)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 cheese-item text-center">
            <h3><a href="#">@item.NameAr</a></h3>
            <div class="cheese-image">
                <div class="cheese-image-border">
                    <a href="#">
                        <img src="@Url.Content(item.Image)" alt="Gouda" title="Gouda">
                    </a>
                </div>
            </div>
        </div>
    }

</div>

<div class="col-xs-12">
    <div class="lined-div">
        <h4><span>Brands</span></h4>
        <p></p>
    </div>
</div>

<div class="DivFore2 my-5">
    <div class="container">
        <div class="carousel5">
            @foreach (var item in Model.BrandsModel)
            {
                <div class="card">
                    <div class="card-header">
                        <a onclick="location.href='@Url.Action("_MoreDetials", "Home" , new {NameEn = item.NameEn})'">
                            <img class="pic-1" src="@Url.Content(item.Image)">
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="card-content">
                            <div class="card-title"><h3>@item.NameEn</h3></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


